#!/bin/bash

# Basic configuraiton
# -------------------
# Location of local clone of Fluo repo
export FLUO_REPO=/local/workspace/fluo

# Versions
# --------
export FLUO_VERSION=1.0.0-beta-1-SNAPSHOT
export HADOOP_VERSION=2.6.0
export ZOOKEEPER_VERSION=3.4.6
export ACCUMULO_VERSION=1.6.1

# Installation directories
# ------------------------
# Common installation directory
export COMMON_INSTALL=$FLUO_DEV/software
# Fluo home
export FLUO_HOME=$COMMON_INSTALL/fluo-$FLUO_VERSION
# Zookeeper home
export ZOOKEEPER_HOME=$COMMON_INSTALL/zookeeper-$ZOOKEEPER_VERSION
# Hadoop prefix
export HADOOP_PREFIX=$COMMON_INSTALL/hadoop-$HADOOP_VERSION
# Accumulo Home
export ACCUMULO_HOME=$COMMON_INSTALL/accumulo-$ACCUMULO_VERSION

# Accumulo configuration
# ----------------------
# Accumulo instance name
export ACCUMULO_INSTANCE=instance16
# Accumulo user
export ACCUMULO_USER=root
# Accumulo passoword
export ACCUMULO_PASSWORD=secret
# Accumulo table
export ACCUMULO_TABLE=fluo
