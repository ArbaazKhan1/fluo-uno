# Start: Resolve Script Directory
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
   bin="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
   SOURCE="$(readlink "$SOURCE")"
   [[ $SOURCE != /* ]] && SOURCE="$bin/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
bin="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
script=$( basename "$SOURCE" )
# Stop: Resolve Script Directory

. "$bin"/impl/load-env.sh

function check_dirs() {
  if [ ! -d "$HADOOP_PREFIX" ]; then
    echo "HADOOP_PREFIX=$HADOOP_PREFIX is not a valid directory.  Please make sure it exists"
    exit 1
  fi
  if [ ! -d "$ZOOKEEPER_HOME" ]; then
    echo "ZOOKEEPER_HOME=$ZOOKEEPER_HOME is not a valid directory.  Please make sure it exists"
    exit 1
  fi
  if [ ! -d "$ACCUMULO_HOME" ]; then
    echo "ACCUMULO_HOME=$ACCUMULO_HOME is not a valid directory.  Please make sure it exists"
    exit 1
  fi
}

case "$1" in
download)
  "$bin"/impl/download.sh ${*:2}
	;;
setup)
  "$bin"/impl/setup.sh ${*:2}
	;;
deploy)
  check_dirs
  "$bin"/impl/deploy.sh "${*:2}"
	;;
stress)
  check_dirs
  if [ -z "$STRESS_REPO" ]; then
    echo "Error - STRESS_REPO is not set in env.sh"
    exit 1
  fi
  if [ ! -d "$STRESS_REPO" ]; then
    echo "Error - STRESS_REPO=$STRESS_REPO is not a valid directory."
    exit 1
  fi
  "$bin"/impl/stress.sh "${*:2}"
	;;
kill)
  "$bin"/impl/kill.sh "${*:2}"
	;;
ashell)
  check_dirs
  $ACCUMULO_HOME/bin/accumulo shell -u $ACCUMULO_USER -p $ACCUMULO_PASSWORD
	;;
fluo)
  check_dirs
  if [ -d "$FLUO_HOME" ]; then
    $FLUO_HOME/bin/fluo ${*:2}
  else 
    echo "Fluo has not be deployed yet!  Run 'fluo-dev deploy' first."
  fi
	;;
*)
	echo -e "Usage: fluo-dev <command> (<argument>)\n"
  echo -e "Possible commands:\n"
	echo "  download    Downloads Fluo dependencies (i.e. Hadoop, Accumulo, & Zookeeper)"
	echo "  setup       Sets up and starts Fluo dependencies (clearing any existing data)"
	echo "  deploy      Stops existing Fluo instance, rebuilds Fluo from local repo, and deploys it"
	echo "  stress      Runs Fluo stress test"
	echo "  kill        Kills Fluo and its depenedencies"
	echo "  ashell      Runs the Accumulo shell"
	echo "  fluo        Runs fluo script"
  echo " " 
	exit 1
esac
